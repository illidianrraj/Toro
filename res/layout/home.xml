<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/relativeLayout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <ImageView
            android:id="@+id/imageView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:src="@drawable/top_bar" />

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:src="@drawable/reset_btn" android:paddingTop="7dp" android:paddingLeft="10dp"/>

        <TextView
            android:id="@+id/textView7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/imageView2"
            android:layout_centerHorizontal="true"
            android:text="Flow Calculator"
            android:textAppearance="?android:attr/textAppearanceLarge" />

    </RelativeLayout>

    <LinearLayout
        android:id="@+id/linearLayout1"
        android:layout_width="match_parent"
        android:layout_height="424dp"
        android:background="@drawable/inner_bg"
        android:orientation="vertical"
        android:baselineAligned="false" >

        <LinearLayout
            android:id="@+id/linearLayout2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <ImageView
                android:id="@+id/imageView4"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:src="@drawable/vertical_divider" />

            <EditText
                android:id="@+id/editText1"
                android:layout_width="130dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="15dp"
                android:background="@drawable/txtbox"
                android:hint="Cost of water"
                android:paddingLeft="10dp" >

                <requestFocus />
            </EditText>

            <EditText
                android:id="@+id/editText2"
                android:layout_width="134dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="15dp"
                android:background="@drawable/txtbox"
                android:hint="1000 Gallon"
                android:paddingLeft="10dp" />
        </LinearLayout>

        <TableLayout
            android:id="@+id/tableLayout1"
            android:layout_width="wrap_content"
            android:layout_height="144dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="25dp"
            android:layout_weight="0.00"
            android:background="@drawable/rows_txtbox" >

            <TableRow
                android:id="@+id/tableRow1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:layout_marginTop="10dp">

                <TextView
                        android:id="@+id/instal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Installation Type"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:textColor="#000000" android:paddingLeft="10dp"/>

                <TextView
                    android:id="@+id/viewinstall"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="40dp"
                    android:layout_marginTop="4dp"
                    android:text="TextView" android:visibility="invisible"/>

                <ImageView
                    android:id="@+id/imageinstall"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/arrow" android:layout_marginTop="6dp" android:layout_marginLeft="20dp"/>

            </TableRow>

            <TableRow
                android:id="@+id/tableRow2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" >

                <TextView
                    android:id="@+id/compare"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Comparison"
                    android:textAppearance="?android:attr/textAppearanceMedium" android:textColor="#000000" android:layout_marginTop="13dp" android:paddingLeft="10dp"/>

                <TextView
                    android:id="@+id/viewcomapre"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="TextView" android:layout_marginTop="13dp" android:paddingLeft="40dp" android:visibility="invisible"/>

                <ImageView
                    android:id="@+id/imagecompare"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="18dp"
                    android:paddingLeft="15dp"
                    android:src="@drawable/arrow" />

            </TableRow>

            <TableRow
                android:id="@+id/tableRow3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" >

                <TextView
                    android:id="@+id/zones"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Zones"
                    android:textAppearance="?android:attr/textAppearanceMedium" android:textColor="#000000" android:layout_marginTop="13dp" android:paddingLeft="10dp"/>

                <TextView
                    android:id="@+id/textzone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="TextView" android:layout_marginTop="13dp" android:paddingLeft="40dp"/>

                <ImageView
                    android:id="@+id/imagezone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="18dp"
                    android:paddingLeft="15dp"
                    android:src="@drawable/arrow" />

            </TableRow>
            
            <TableRow
                android:id="@+id/tableRow4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" >

                <TextView
                    android:id="@+id/sprinkler"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Sprinkler"
                    android:textAppearance="?android:attr/textAppearanceMedium" android:textColor="#000000" android:layout_marginTop="13dp" android:paddingLeft="10dp"/>

                <TextView
                    android:id="@+id/textsprinkler"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="TextView" android:layout_marginTop="13dp" android:paddingLeft="40dp"/>

                <ImageView
                    android:id="@+id/imagesprinkler"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="18dp"
                    android:paddingLeft="15dp"
                    android:src="@drawable/arrow" />

            </TableRow>

        </TableLayout>
    </LinearLayout>

</LinearLayout>